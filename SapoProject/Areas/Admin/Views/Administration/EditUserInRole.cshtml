@model List<SapoProject.Areas.Admin.Models.DTO.UserRoleChange>
@{
	ViewData["Title"] = "EditUserInRole";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
	var roleId = ViewBag.roleId;
}





<form method="post">
	<div class="card">
		<div class="card-header">
			<h2>Thêm Hoặc Xóa Các Quản Trị Viên Cho Vai Trò Này</h2>
		</div>
		<div class="card-body">
			@for (int i = 0; i < Model.Count; i++)
			{
				<div class="form-check m-1">
					<input type="hidden" asp-for="@Model[i].UserId" />
					<input type="hidden" asp-for="@Model[i].UserName" />
					<input type="checkbox" asp-for="@Model[i].IsSelected" />
					<label class="form-check-label" asp-for="@Model[i].IsSelected">
						@Model[i].UserName
					</label>
				</div>
			}
		</div>
		<div class="card-footer">
			<input type="submit" value="Cập Nhật" class="btn btn-primary"
				   style="width:auto; height:auto" asp-action="EditUserInRole" asp-controller="Administration" asp-route-roleId="@roleId" />
			<a asp-action="EditRole" asp-route-id="@roleId"
			   class="btn btn-primary" style="width:auto">Hủy Bỏ</a>
		</div>
	</div>
</form>

