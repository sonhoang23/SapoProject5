@model IEnumerable<SapoProject.Model.Entities.Category>

@{
	Layout = "_Layout";
	ViewData["Title"]= "Trang Danh Sách Danh Mục";
}

<h1>@ViewData["Title"]</h1>

<form>
	<button style="height:auto; width:auto; margin-top:20px;margin-bottom:20px" asp-action="Create" class="btn btn-info">Tạo Mới Danh Mục Sản Phẩm</button>
</form>


<div class="card mb-4">
	<div class="card-header">
		<i class="fas fa-table mr-1"></i>
		@ViewData["Title"]
	</div>
	<div class="card-body">

		<div class="table-responsive w">

			<table class="table table-bordered table table-hover" id="dataTable" width="50%" cellspacing="0"
				   data-show-toggle="true"
				   data-show-refresh="true"
				   data-pagination-detail-h-align="right">
				<thead>
					<tr>
						<th>Tên Danh Mục Sản Phẩm</th>
						<th>Ảnh Danh Mục</th>
						<th>Thông Tin Vắt Tắt</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in ViewBag.ListAllChildCategory)
					{
						<tr>
							<td>
								<div>
									@item.CategoryId
									@item.CategoryName
								</div>
							</td>
							<td>
								<img src=@item.imageURL style="width:100px">
							</td>
							<td>
								<form>
									<div class="col">

										<button style="height:inherit; width:inherit; margin-top:15px" asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning">Chỉnh Sửa</button>

									</div>
								</form>

							</td>
						</tr>
					}
				</tbody>
			</table>


		</div>
	</div>
</div>
