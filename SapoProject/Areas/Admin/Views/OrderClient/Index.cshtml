@model IEnumerable<SapoProject.Model.Entities.OrderClient>

@{
	ViewData["Title"] = "Index";
	Layout = "_Layout";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<div class="card mb-4">
	<div class="card-header">
		<i class="fas fa-table mr-1"></i>
		@ViewData["Title"]
	</div>
	<div class="card-body">

		<div class="table-responsive w">

			<table class="table table-bordered table table-hover" id="dataTable" width="100%" cellspacing="0"
				   data-show-toggle="true"
				   data-show-refresh="true"
				   data-pagination-detail-h-align="right">
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.OrderId)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Status)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.DateCreated)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.DateCompleted)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.ClientId)
						</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.OrderId)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Status)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.DateCreated)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.DateCompleted)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.ClientId)
							</td>
							<td>
								@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
								@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
								@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

