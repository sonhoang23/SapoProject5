@model SapoProject.Areas.Customer.Models.DTO.ClientLogin
@{

}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<meta name="description" content="" />
	<meta name="author" content="" />
	<title>@ViewBag.Title</title>
	<link href="/Assest/dist/css/styles.css" rel="stylesheet" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
	<div id="layoutAuthentication">
		<div id="layoutAuthentication_content">
			<main>
				<div class="container">
					<div class="row justify-content-center">
						<div class="col-lg-5">
							<div class="card shadow-lg border-0 rounded-lg mt-5">
								<div class="card-header"><h3 class="text-center font-weight-light my-4">@ViewBag.Title</h3></div>
								<div class="card-body">
									<form asp-action="Login">
										<div class="form-group">
											<label asp-for="clientAccount" class="control-label">Account</label>
											<input type="text" asp-for="clientAccount" class="form-control" placeholder="Input Your Name Here" />
											<span asp-validation-for="clientAccount" class="text-danger"></span>
										</div>
										<div class="form-group">
											<label asp-for="clientPassWord" class="control-label"> Pass Word</label>
											<input type="password" asp-for="clientPassWord" class="form-control" placeholder="Input Pass Word Here" />
											<span asp-validation-for="clientPassWord" class="text-danger"></span>
										</div>
										<div class="form-check">
											<input type="checkbox" asp-for="rememberPassWord" class="form-check-input" id="exampleCheck1">
											<label class="form-check-label" for="exampleCheck1">Check me out</label>
										</div>

										<div class="form-group">
											<input type="submit" value="Login" class="btn btn-primary" />
										</div>
									</form>
								</div>
								<div class="card-footer text-center">
									<div class="small"><a asp-area="Admin" asp-controller="User" asp-action="Register">Register Now!</a></div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</main>
		</div>
		<div id="layoutAuthentication_footer">
			<partial src="~\Views\Shared\PartialView_Footer.cshtml" />
		</div>

	</div>
	<script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
	<script src="/Assest/dist/js/scripts.js"></script>
</body>
</html>






